<div>
    <h1 class="title has-text-centered has-text-primary">🎟️ Taquilla Comprada</h1>
    <% for (let movie in groupedData) { %>
        <div class="box mb-5">
            <!-- Título de la película -->
            <h2 class="subtitle has-text-primary is-italic">
                🎥 <%= movie %>
            </h2>
            <div class="columns is-multiline">
                <% groupedData[movie].forEach(schedule => { %>
                    <div class="column is-6">
                        <article class="message is-info">
                            <div class="message-header">
                                <p>🎬 Sala: <%= schedule.room_name %></p>
                            </div>
                            <div class="message-body">
                                <p><strong>Horario:</strong> <%= schedule.schedule_time %></p>
                                <p><strong>Cliente:</strong> <%= schedule.customer_name %></p>
                            </div>
                        </article>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
</div>
