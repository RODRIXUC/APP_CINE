<div class="box">
    <h1 class="title">Editar Cliente</h1>
    <form action="/customers/edit/<%= customer.id %>" method="POST">
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="name" value="<%= customer.name %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input" type="email" name="email" value="<%= customer.email %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Tel√©fono</label>
            <div class="control">
                <input class="input" type="text" name="phone" value="<%= customer.phone %>" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar Cambios</button>
        </div>
    </form>
</div>
