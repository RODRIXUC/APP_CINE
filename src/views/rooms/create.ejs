<div class="box">
    <h1 class="title">Agregar Sala</h1>
    <form action="/rooms/create" method="POST">
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="name" placeholder="Nombre de la sala" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Capacidad</label>
            <div class="control">
                <input class="input" type="number" name="capacity" placeholder="Capacidad de la sala" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar</button>
        </div>
    </form>
</div>
