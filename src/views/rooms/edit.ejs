<div class="box">
    <h1 class="title">Editar Sala</h1>
    <form action="/rooms/edit/<%= room.id %>" method="POST">
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="name" value="<%= room.name %>" required>
            </div>
        </div>
        <div class="field">
            <label class="label">Capacidad</label>
            <div class="control">
                <input class="input" type="number" name="capacity" value="<%= room.capacity %>" required>
            </div>
        </div>
        <div class="control">
            <button class="button is-primary" type="submit">Guardar Cambios</button>
        </div>
    </form>
</div>
